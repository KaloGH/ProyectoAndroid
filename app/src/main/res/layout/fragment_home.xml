<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/btn_games"
        android:layout_width="334dp"
        android:layout_height="150dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="185dp"
        android:text="Show Games"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_giveaways"
        android:layout_width="334dp"
        android:layout_height="150dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="181dp"
        android:text="Show Giveaways"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_games"
        app:layout_constraintVertical_bias="0.519" />

    <Button
        android:id="@+id/btn_favgames"
        android:layout_width="334dp"
        android:layout_height="150dp"
        android:layout_marginTop="68dp"
        android:text="My Favs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_giveaways" />

</androidx.constraintlayout.widget.ConstraintLayout>